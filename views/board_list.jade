
extends layout

block content

    h1= title
    p Welcome to #{title}
    p DATA : #{articles}
    table.table.table-hover
        thead
            tr
                th #
                th Writer
                th Title
                th Hits
                th Date
        tbody
        for article in articles
            tr
                td #{article._id}
                td #{article.writer}
                td hello
                td hello
                td new Date

    form#writeForm(action="board/write" method="post")
        div.form-group
            label Writer
            input.form-control(type="text" name="writer")
        div.form-group
            label Title
            input.form-control(type="text" name="title")
        div.form-group
            label Contents
            textarea.form-control(name="contents" rows=10)
        input.btn.btn-primary.btn-lg.btn-block(type='submit' value='Write')


